<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6 border mt-5 p-4">
            <form action="/admin/edit-user/{{user.email}}" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <legend class="text-center">Edit User</legend>

                <div class="form-group">
                    <label for="first_name">Name</label>
                    <input type="text" class="form-control" value="{{user.first_name}}" name="first_name" id="first_name" placeholder="First Name" required>
                </div>

                <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <input type="text" class="form-control" value="{{user.last_name}}" name="last_name" id="first_name" placeholder="Last Name" required>
                </div>

                 <div class="form-group d-none">
                    <label for="email">Email Address</label>
                    <input type="text" value="{{user.email}}" class="form-control" name="email" id="email" placeholder="Email Address">
                </div> 

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="password" value="" class="form-control" name="password" id="pw" required>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
        <div class="col-md-3">
            
        </div>
    </div>
</div>