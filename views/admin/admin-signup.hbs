
    <header>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-12 col-md-6 pt-4 border">
                    <h1 class="text-center">Admin Register Form</h1>
                    <form action="/admin/admin-signup" method="post">
                        
                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <label class="form-label">User Name</label>
                            <input type="text" class="form-control" name="name" id="fname" placeholder="User Name"
                                required>
                            <span></span>

                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" name="email" id="email"
                                placeholder="Email Address" required>

                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="pw" placeholder="password"
                                required>
                            <span></span>

                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Register</button>
                        <div class="text-center">
                            <p>Have an account? <a href="/admin/admin-login">Login</a></p>
                        </div>
                    </form>
                </div>
                <div class="col-md-3">

                </div>
            </div>
        </div>

    </header>
   